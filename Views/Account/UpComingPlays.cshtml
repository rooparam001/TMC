<script src="~/js/upcomingplays.js"></script>
<style type="text/css">
    form {
        margin-top: 2%;
    }

    .table {
        background-color: #3d0000;
        color: #ffe1e6;
    }

    tbody {
        background-color: #200e10;
    }
</style>
<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">upload upcoming plays</h1>
        </div>
    </section>

    <div class="album py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="height:50vh;overflow-y:auto;">
                    <div class="btn-group btn-group-sm pr-0" role="group" aria-label="Basic outlined example">
                        <button type="button" class="btn btn-outline-success" name="btnAdd"><i class="bi bi-plus-circle-dotted"></i> &nbsp; Add New</button>
                        <button type="button" id="btnDeleteAll" class="btn btn-outline-warning"><i class="bi bi-x-circle"></i> &nbsp; Delete All</button>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No.
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Time
                                </th>
                                <th>
                                    View Event Link
                                </th>
                                <th>
                                    Tickets Link
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</main>

<!-- Modal -->
<div class="modal fade" id="modalAddNew" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <h4>add new upcoming play</h4>
                <hr />
                <form>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label class="text-inverse" for="txtplaytitle">Title</label>
                                <input type="text" class="form-control form-control-sm" id="txtplaytitle" placeholder="play's title" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="text-inverse" for="txtplaydate">Date</label>
                                <input type="text" class="form-control form-control-sm" id="txtplaydate" placeholder="play's date" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="text-inverse" for="txtplaytime">Time</label>
                                <input type="text" class="form-control form-control-sm" id="txtplaytime" placeholder="play's time" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="text-inverse" for="txtplayeventlink">Event Link</label>
                                <input type="text" class="form-control form-control-sm" id="txtplayeventlink" placeholder="play's event link" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="text-inverse" for="txtplayeventbuylink">Event Buy Link</label>
                                <input type="text" class="form-control form-control-sm" id="txtplayeventbuylink" placeholder="play's buy link" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label for="formFile" class="form-label">Banner Image URL</label>
                                <input class="form-control form-control-sm" type="file" id="formFile" accept="image/*">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnUpload" class="btn btn-primary"><i class="bi bi-x"></i> &nbsp; add</button>
            </div>
        </div>
    </div>
</div>