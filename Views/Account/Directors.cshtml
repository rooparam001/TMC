<script src="~/js/accoutDirectors.js"></script>
<link href="~/css/accountdirectors.css" rel="stylesheet" />
<style type="text/css">
    form {
        margin-top: 2%;
    }
</style>
<main role="main">
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">upload directors</h1>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="col-md-12">
                <div class="row">
                    <button type="button" class="btn btn-sm btn-outline-success float-right" name="btnAdd"><i class="bi bi-plus-circle-dotted"></i> &nbsp; Add New</button>
                </div>
                <div class="row data-view">

                </div>
            </div>
        </div>
    </div>

</main>

<!-- Modal -->
<div class="modal fade" id="modalAddNew" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-body">
                <h4>add new director</h4>
                <hr />
                <form>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label class="text-inverse" for="txtdirectortitle">Name</label>
                                <input type="text" class="form-control form-control-sm" id="txtdirectortitle" placeholder="directors's title" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label for="formFile" class="form-label">Profile Image</label>
                                <input class="form-control form-control-sm" type="file" id="formFile" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label for="formFile" class="form-label">Description</label>
                                <textarea class="form-control form-control-sm" id="txtDescription" placeholder="directors's description" required></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnUpload" class="btn btn-primary"><i class="bi bi-x"></i> &nbsp; add</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalViewDirector" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <h4 id="modalheading"></h4>
                <hr />
                <div class="col-lg-12 col-sm-12 col-12">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12 col-6">
                            <img class="card-img-top" alt="Director Image" id="modalimg">
                        </div>
                        <div class="col-lg-6 col-sm-12 col-6">
                            <p class="form-control" id="modalp"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>